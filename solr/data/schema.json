{
    "add-field-type": [
        {
            "name":"standard_text",
            "class":"solr.TextField",
            "indexAnalyzer":{
                "tokenizer":{
                    "class":"solr.OpenNLPTokenizerFactory", "sentenceModel": "en-sent.bin", "tokenizerModel": "en-token.bin"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
					{"class":"solr.SynonymFilterFactory", "expand":"true", "ignoreCase":"true", "synonyms":"synonyms.txt", "tokenizerFactory":"solr.StandardTokenizerFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"}
                ]
            },
            "queryAnalyzer":{
                "tokenizer":{
                    "class":"solr.StandardTokenizerFactory"
                },
                "filters":[
                    {"class":"solr.ASCIIFoldingFilterFactory", "preserveOriginal":true},
                    {"class":"solr.LowerCaseFilterFactory"},
					{"class":"solr.SynonymFilterFactory", "expand":"true", "ignoreCase":"true", "synonyms":"synonyms.txt", "tokenizerFactory":"solr.StandardTokenizerFactory"},
                    {"class":"solr.EnglishPossessiveFilterFactory"},
                    {"class":"solr.EnglishMinimalStemFilterFactory"}
                ]
            }
        }
    ],

